<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4>Restablecer Contrase単a</h4>
        </div>
        <div class="card-body">
          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          <form action="/api/sessions/reset-password/{{token}}" method="POST">
            <div class="mb-3">
              <label for="password" class="form-label">Nueva Contrase単a</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
                minlength="6"
              />
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirmar
                Contrase単a</label>
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirmPassword"
                required
                minlength="6"
              />
            </div>
            <button type="submit" class="btn btn-primary">Cambiar Contrase単a</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>